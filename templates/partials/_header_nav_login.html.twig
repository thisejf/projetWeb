<div class="header-nav-user">
    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <div class="user-image">
                    <img src={{ asset('uploads/images/' ~ app.user.image) }} alt="User Photo">
                <div class="notification"></div><!-- /.notification-->
            </div><!-- /.user-image -->
            {% if app.user.roles[0] == 'ROLE_PRESTATAIRE'%}
                <span class="header-nav-user-name">{{ app.user.nom }}</span>
            {% else %}
                <span class="header-nav-user-name">{{ app.user.prenom }} {{ app.user.nom }}</span>
            {% endif %}
            <i class="fa fa-chevron-down"></i>
        </button>

        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><a href={{ path('profil') }}>Edit Profile</a></li>
            <li><a href="change-password.html">Change Password</a></li>
            <li><a href={{ path('app_logout') }}>Logout</a></li>
        </ul>
    </div><!-- /.dropdown -->
</div><!-- /.header-nav-user -->