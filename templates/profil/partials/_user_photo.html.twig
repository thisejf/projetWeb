<div class="widget">
    <div class="user-photo">
        <a href="#">
            {% if app.user.roles[0] == 'ROLE_PRESTATAIRE'%}
                <img src={{ app.user.image.first.image }} alt="User Photo">
            {% else %}
                <img src={{ app.user.image }} alt="User Photo">
            {% endif %}
            <span class="user-photo-action">Click here to reupload</span>
        </a>
    </div><!-- /.user-photo -->
</div><!-- /.widget -->